<head>
    <style>

        .control-label {
            text-align: center;
        }

        textarea {
            width: 100%;
            max-height: 500px;
        }

        .btn-event a {
            color: white;
            padding: 6px 12px;
            margin: 0px 10px;
            background-color: #4e73df;
        }

        .form-group {
            margin-bottom: 20px;
            align-items: center;
        }
    </style>
</head>


<h3 style="text-align: center">THÊM NHÂN VIÊN MỚI</h3>
<hr />
<div>
    @using (Html.BeginForm("Create", "AdminNhanVien", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.MaNV, "Mã Nhân viên: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="@ViewBag.MaNV" disabled readonly class="form-control" required />
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.TenNV, "Tên nhân viên: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.NgaySinh, "Ngày sinh: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.GioiTinh, "Giới tính: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.GioiTinh, true) Nam
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.GioiTinh, false) Nữ
                    </label>
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.CMND, "CMND: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.DiaChi, "Địa chỉ: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.Email, "Email: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.ChucVu, "Chức Vụ: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.ChucVu, true) Quản Lí
                    </label>
                    <label class="radio-inline">
                        @Html.RadioButtonFor(model => model.ChucVu, false) Nhân Viên
                    </label>
                    @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group d-sm-block d-md-flex" style="justify-content: center; align-items: center">
                <div class="col-md-offset-2" style="margin-right: 10px">
                    <input type="submit" value="Thêm" class="btn btn-default btn-primary" style="width: 100px" />
                </div>
                <div class="col-md-offset-2">
                    <a href="@Url.Action("Index")" class="btn btn-primary" style="Width: 100px; font-weight: normal">Quay Lại</a>
                </div>
            </div>
        </div>
    }



</div>