<style>
    .btn_create {
        display: inline-block;
        max-width: 200px;
        background-color: lightskyblue;
        padding: 5px 10px;
        cursor: pointer;
    }

        .btn_create a {
            color: #4e73df !important;
            text-decoration: none;
        }

            .btn_create a:hover {
                color: white !important;
            }

    a:hover, a {
        text-decoration: none !important;
    }

    form {
        display: flex !important;
        align-items: center;
    }

    .btn-event {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 10px 0px 20px 0px;
    }

    .grid-footer {
        color: #000;
        font: 17px Calibri;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer a {
            background-color: #ffffff;
            color: blue !important;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            padding: 1px 10px 2px 10px;
        }

            .grid-footer a:active, a:hover {
                color: #FFAD33;
            }

    .alternatingRowStyle {
        background-color: aliceblue;
    }

    table .table1 {
        text-align: left;
        margin-left: 0px;
        margin-right: 0px;
        width: 800px;
    }

    table td {
        text-align: center;
    }

    th a {
        color: dodgerblue !important;
    }

    th {
        text-align: center;
    }

    .gridContent abbr[data-original-title], abbr[title] {
        cursor: pointer !important;
    }


    .action-buttons {
        display: flex;
        gap: 5px;
    }
</style>

<h3 style="text-align: center; font-weight: normal;">DANH SÁCH NHÂN VIÊN</h3>
<hr />
<div class="btn-event" style="display: flex; justify-content: end; margin: 0px;">
        @using (Html.BeginForm("Index", "AdminNHAN_VIEN", FormMethod.Post, new { @class = "col-8 d-flex form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
        {
            @Html.AntiForgeryToken()
            <input type="text" name="tenNV" placeholder="search for..." class="form-control bg-light border-1 small" style="width: 85%; margin-bottom: 20px" />
            <input type="submit" name="submit" value="tìm kiếm" style="max-width: 200px; background-color: lightskyblue; padding: 5px 10px; margin-left: 10px; margin-bottom: 20px; border: none; color: #4e73df !important;" />
        }
    <p class="btn_create" style="margin-bottom: 20px">
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <p class="btn_create" style="margin-bottom: 20px; margin-left: 20px; max-width: 400px">
        @Html.ActionLink("In danh sách", "Inds")
    </p>
</div>

<div id="gridContent">
    @ViewBag.TB
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover",
        footerStyle: "grid-footer",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
        columns: new[]
        {
            grid.Column("MaNV", "Mã Nhân Viên"),
            grid.Column("TenNV", "Tên Nhân Viên"),
            grid.Column("NgaySinh", "Ngày Sinh"),
            grid.Column("GioiTinh", "Giới Tính", format: (item) => item.GioiTinh == true ? "Nam" : "Nữ"),
            grid.Column("CMND", "CMND"),
            grid.Column("DiaChi", "Địa Chỉ"),
            grid.Column("Email", "Email"),
            grid.Column("MatKhau", "Mật Khẩu"),
            grid.Column("ChucVu", "Chức Vụ", format: (item) => item.ChucVu == true ? "Quản lý" : "Nhân viên"),
            grid.Column("Chức năng", format: @<text>
    <div class="action-buttons">
        <a href="@Url.Action("Details", new { id = item.MaNV })" class="btn btn-info">
            Xem
        </a>
        <a href="@Url.Action("Edit", new { id = item.MaNV })" class="btn btn-warning">
            Sửa
        </a>
        <a href="@Url.Action("Delete", new { id = item.MaNV })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
            Xóa
        </a>
    </div>
            </text>)
}
)
</div>
