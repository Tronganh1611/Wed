<head>
    <style>
        .control-label {
            text-align: center;
        }

        textarea {
            width: 100%;
            max-height: 500px;
        }

        .btn-event a {
            color: white;
            padding: 6px 12px;
            margin: 0px 10px;
            background-color: #4e73df;
        }

        .form-group {
            margin-bottom: 20px;
            align-items: center;
        }
    </style>
</head>

<h3 style="text-align: center">CẬP NHẬT SỐ LƯỢNG SẢN PHẨM</h3>
<hr />
<div>
    @using (Html.BeginForm("CapNhat", "AdminSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.MaSP, "Tên sản phẩm: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MaSP, ViewBag.MaSP as SelectList, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-sm-block d-md-flex">
                @Html.LabelFor(model => model.SoLuong, "Số lượng thêm vào: ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group d-sm-block d-md-flex" style="justify-content: center; align-items: center">
                <div class="col-md-offset-2" style="margin-right: 10px">
                    <input type="submit" value="Thêm" class="btn btn-default btn-primary" style="width: 100px" />
                </div>
                <div class="col-md-offset-2">
                    <a href="@Url.Action("index")" class="btn btn-primary" style="Width: 100px; font-weight: normal">Quay Lại</a>
                </div>
            </div>
        </div>
    }
</div>
