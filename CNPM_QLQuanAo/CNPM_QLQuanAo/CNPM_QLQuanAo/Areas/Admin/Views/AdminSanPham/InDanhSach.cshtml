@model IEnumerable<CNPM_QLQuanAo.Models.SANPHAM>
@{
    ViewBag.Title = "InDanhSach";
    Layout = null;
    var count = 0;
    var dateNow = DateTime.Now;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modernize Free</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        h3 {
            text-align: center;
            font-size: 20px;
            margin: 20px auto;
        }

        .table-product {
            box-shadow: 2px 2px 5px 5px rgba(0, 0, 0, 0.7);
        }

        .table-responsive {
            width: 60%;
            margin: 30px auto;
            border: 1px solid black;
        }

        .name-store {
            width: 100%;
            text-align: center;
            color: indigo;
            margin-bottom: 0px;
        }

        .footer-report {
            margin-top: 20px;
            display: flex;
            justify-content: end;
        }

        .footer-report div {
            text-align: center;
        }

        .footer-report p{
            font-size: 15px;
            line-height: 10px;
        }
    </style>
</head>
<body>
    <div class="container-fluid h-100 w-100 p-4">
        <div class=" table-responsive bg-white table-product m-auto p-2">
            <p class="name-store">Male fashion</p>
            <hr style="margin-top: 0px;" />
            <h3>BẢNG DANH SÁCH SẢN PHẨM</h3>
            <table class="table w-100 table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại sản phẩm</th>
                        <th>Size</th>
                        <th>Màu sắc</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(count + 1)</td>
                            <td>@Html.DisplayFor(modelItem => item.TenSP)</td>
                            <td>@Html.DisplayFor(modelItem => item.LoaiSP.TenLoai)</td>
                            <td>@Html.DisplayFor(modelItem => item.Size)</td>
                            <td>@Html.DisplayFor(modelItem => item.Mau)</td>
                            <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                            <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
            <div class="footer-report w-100">
                <div class="w-30">
                    <p>Nha Trang, ngày @dateNow.Day tháng @dateNow.Month năm @dateNow.Year</p>
                    <p>Người lập phiếu</p>
                    <h4>@ViewBag.TenLogin_NV</h4>
                </div>
            </div>
        </div>
        <div>
            <div class="form-group d-sm-block d-md-flex" style="justify-content: center; align-items: center; margin-top: 20px; gap: 10px">
                <div class="col-md-offset-2">
                    <a href="#" class="btn btn-primary" style="Width: 100px; font-weight: normal">
                        <i class="ti ti-printer"></i>
                        In
                    </a>
                </div>
                <div class="col-md-offset-2">
                    <a href="@Url.Action("index")" class="btn btn-primary" style="Width: 100px; font-weight: normal">Quay Lại</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/StyleAdmin/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/StyleAdmin/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/StyleAdmin/js/sidebarmenu.js"></script>
    <script src="~/Content/StyleAdmin/js/app.min.js"></script>
    <script src="~/Content/StyleAdmin/libs/apexcharts/dist/apexcharts.min.js"></script>
    <script src="~/Content/StyleAdmin/libs/simplebar/dist/simplebar.js"></script>
    <script src="~/Content/StyleAdmin/js/dashboard.js"></script>
</body>
</html>
