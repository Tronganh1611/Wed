<style>
    p a {
        color: white;
        padding: 6px 12px;
        margin: 0px 5px;
        background-color: #4e73df;
    }
</style>

<h4 style="text-align: center">THÔNG TIN KHÁCH HÀNG</h4>
<hr />

<div style="font-size:18px; align-items: center" class="d-sm-block d-md-flex">
    <div class="p-2 col-4">
        <img src="https://static.thenounproject.com/png/854888-200.png" width="300" height="250" />
    </div>
    <div class="col-7 " style="color: black; font-size: 16px; line-height: 30px;">
        <div style="display: flex; justify-content: space-between; width: 100%;">
            <div>
                <p>Mã Khách Hàng: @Html.DisplayFor(model => model.MaKH)</p>
                <p>Tên Khách Hàng: @Html.DisplayFor(model => model.TenKH)</p>
                <p>Số Điện Thoại: @Html.DisplayFor(model => model.SDT)</p>
            </div>
            <div>
                @{
                    var genderValue = Model.GioiTinh.HasValue ? (Model.GioiTinh.Value ? "Nam" : "Nữ") : "";
                }
                <p>Giới Tính: @genderValue</p>
                <p>Email: @Html.DisplayFor(model => model.Email)</p>
                <p>Mật Khẩu: @Html.DisplayFor(model => model.MatKhau)</p>
            </div>
        </div>
        <p>Địa Chỉ : @Html.DisplayFor(model => model.DiaChi)</p>
    </div>
</div>

<div class="form-group d-sm-block d-md-flex" style="justify-content: center; align-items: center">
    <div class="col-md-offset-2">
        <a href="@Url.Action("index")" class="btn btn-primary" style="Width: 100px; font-weight: normal">Quay Lại</a>
    </div>
</div>

