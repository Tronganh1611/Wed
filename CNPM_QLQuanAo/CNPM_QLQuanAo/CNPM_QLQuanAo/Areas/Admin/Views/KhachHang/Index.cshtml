<h2>Danh Sách Thông Tin Khách Hàng</h2>
<div class="btn-event">
    @using (Html.BeginForm("Index", "KhachHang", FormMethod.Post, new { @class = "col-8 d-flex form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
    {
        @Html.AntiForgeryToken()
        <input type="text" name="tenKH" placeholder="search for..." class="form-control bg-light border-1 small" style="width: 85%" />
        <input type="submit" name="submit" value="tìm kiếm" style="max-width: 200px; background-color: lightskyblue; padding: 5px 10px; margin-left: 10px; border: none; color: #4e73df !important;" />
    }
    <div class="btn-event" style="display: flex; justify-content: end; margin: 0px;">
        <p class="btn_create" style="margin-bottom: 20px; margin-left: 20px; max-width: 400px">
            @Html.ActionLink("In danh sách", "InDanhSachKH")
        </p>
    </div>
</div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Mật khẩu</th>
                    <th>Giới tính</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                        <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.MatKhau)</td>
                        <td>
                            @{
                                var genderValue = item.GioiTinh.HasValue ? (item.GioiTinh.Value ? "Nam" : "Nữ") : "";
                            }
                            @genderValue
                        </td>
                        <td>
                            <a href="@Url.Action("Details", new { id = item.MaKH })" class="btn btn-sm btn-info">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
